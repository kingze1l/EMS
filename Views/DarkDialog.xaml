<Window x:Class="EMS.Views.DarkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog" Height="200" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CC23263A"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Border CornerRadius="16" Background="#23263A" Padding="32" BorderBrush="#3A3D4D" BorderThickness="2" >
        <StackPanel>
            <TextBlock x:Name="MessageText" Foreground="White" FontSize="18" Margin="0,0,0,16" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="OK" Width="80" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window> 