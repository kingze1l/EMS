<UserControl x:Class="EMS.Views.NotificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMS.Views"
             xmlns:converters="clr-namespace:EMS.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="10" 
                Margin="10" 
                Padding="15">
            <StackPanel>
                <TextBlock Text="Notifications" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         Foreground="{DynamicResource AccentBrush}"/>
                <TextBlock x:Name="UnreadCount" 
                         Text="0 unread notifications" 
                         Foreground="{DynamicResource ForegroundBrush}"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Notifications List -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl x:Name="NotificationsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="10"
                                Margin="0,5"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Title and Type -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" 
                                             FontWeight="Bold" 
                                             FontSize="16"/>
                                    <TextBlock Text="{Binding Type}" 
                                             Foreground="{DynamicResource AccentBrush}"
                                             Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Timestamp -->
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                         Text="{Binding CreatedAt, StringFormat='{}{0:g}'}"
                                         Foreground="{DynamicResource ForegroundBrush}"
                                         VerticalAlignment="Top"/>

                                <!-- Message -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                         Text="{Binding Message}"
                                         TextWrapping="Wrap"
                                         Margin="0,10,0,0"/>

                                <!-- Action Button -->
                                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                        Content="View Details"
                                        Style="{StaticResource ModernButton}"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding ActionUrl, Converter={StaticResource StringToVisibilityConverter}}"
                                        Click="ViewDetails_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl> 