    <Window
        x:Class="EMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Employee Management" Height="600" Width="1000" 
        Background="#F5F6FA" WindowStartupLocation="CenterScreen">

        <Window.Resources>
            <!-- Define DropShadowEffect Resource -->
            <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="1" Opacity="0.2"/>

            <!-- Modern TextBox Style -->
            <Style x:Key="SearchBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#666"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="25"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <TextBlock Text="🔍 Search Employee"
                                            Foreground="#999"
                                            Margin="2,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="{x:Static system:Int32.MaxValue}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="#6C5CE7"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#5849BE"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Card Style -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            </Style>

            <!-- Boolean to Visibility Converter -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </Window.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Background="#FFFFFF" Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <Image Source="/EMS;component/Assets/people_icon.png" Width="60" Height="60" Margin="20,30"/>
                    <TextBlock Text="EMS" FontSize="24" FontWeight="Bold" Foreground="#6C5CE7" 
                            HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <StackPanel Margin="15,20">
                        <Button Style="{StaticResource ModernButton}" Click="Dashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Click="Attendance_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅" Margin="0,0,10,0"/>
                                <TextBlock Text="Attendance"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Click="Employees_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" Margin="0,0,10,0"/>
                                <TextBlock Text="Employees"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Click="Analytics_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" Margin="0,0,10,0"/>
                                <TextBlock Text="Analytics"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Click="Report_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✍" Margin="0,0,10,0"/>
                                <TextBlock Text="Report"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙" Margin="0,0,10,0"/>
                                <TextBlock Text="Settings"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Header -->
                <Grid Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="25" Width="300" HorizontalAlignment="Left">
                        <TextBox x:Name="SearchBox"
                                Style="{StaticResource SearchBoxStyle}"
                                TextChanged="Search_TextChanged"/>
                    </Border>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="White" CornerRadius="25" Padding="15,8" Margin="0,0,10,0">
                            <TextBlock x:Name="WelcomeText" Text="Welcome!" FontSize="14" Foreground="#6C5CE7"/>
                        </Border>
                        <Button Style="{StaticResource ModernButton}" Click="Notification_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔔" Margin="0,0,5,0"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ModernButton}" Content="Logout" Click="Logout_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Content Frame -->
                <Frame x:Name="MainFrame" 
                       Grid.Row="1" 
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"/>
            </Grid>
        </Grid>
    </Window>