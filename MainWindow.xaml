<Window
    xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    x:Class="EMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Employee Management" Height="600" Width="1000" 
    Background="#F5F6FA" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Define DropShadowEffect Resource -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="1" Opacity="0.2"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5849BE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Background="#FFFFFF" Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <Image Source="people_icon.png" Width="60" Height="60" Margin="20,30"/>
                <TextBlock Text="EMS" FontSize="24" FontWeight="Bold" Foreground="#6C5CE7" 
                         HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Margin="15,20">
                    <Button Style="{StaticResource ModernButton}" Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" Margin="0,0,10,0"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Click="Attendance_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" Margin="0,0,10,0"/>
                            <TextBlock Text="Attendance"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Click="Employees_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" Margin="0,0,10,0"/>
                            <TextBlock Text="Employees"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Click="Analytics_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" Margin="0,0,10,0"/>
                            <TextBlock Text="Analytics"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Click="Report_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✍" Margin="0,0,10,0"/>
                            <TextBlock Text="Report"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Click="Settings_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="25" Width="300" HorizontalAlignment="Left">
                    <xctk:WatermarkTextBox Watermark="🔍 Search Employee" 
                                          BorderThickness="0" 
                                          Padding="15,8"
                                          FontSize="14"
                                          TextChanged="Search_TextChanged"/>
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="25" Padding="15,8" Margin="0,0,10,0">
                        <TextBlock Text="Welcome, Admin!" FontSize="14" Foreground="#6C5CE7"/>
                    </Border>
                    <Button Style="{StaticResource ModernButton}" Click="Notification_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔔" Margin="0,0,5,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Content="Logout" Click="Logout_Click"/>
                </StackPanel>
            </Grid>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Section -->
                    <StackPanel>
                        <!-- Employee Stats Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Employee Statistics" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="32" FontSize="48" FontWeight="Bold" Foreground="#6C5CE7"/>
                                    <StackPanel Grid.Column="1" Margin="20,0">
                                        <TextBlock Text="22 Male" FontSize="16" Margin="0,0,0,5"/>
                                        <TextBlock Text="10 Female" FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Skills Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Top Skills" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- UI/UX Design -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                        <TextBlock Text="UI/UX Design" FontSize="16"/>
                                        <Grid Margin="0,5">
                                            <Border Background="#EEE" CornerRadius="5" Height="10"/>
                                            <Border Background="#6C5CE7" CornerRadius="5" Height="10" HorizontalAlignment="Left" Width="450"/>
                                        </Grid>
                                        <TextBlock Text="90% - 100+ Projects" FontSize="12" Foreground="#666"/>
                                    </StackPanel>

                                    <!-- Illustration -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                        <TextBlock Text="Illustration" FontSize="16"/>
                                        <Grid Margin="0,5">
                                            <Border Background="#EEE" CornerRadius="5" Height="10"/>
                                            <Border Background="#6C5CE7" CornerRadius="5" Height="10" HorizontalAlignment="Left" Width="425"/>
                                        </Grid>
                                        <TextBlock Text="85% - 80+ Projects" FontSize="12" Foreground="#666"/>
                                    </StackPanel>

                                    <!-- Animation -->
                                    <StackPanel Grid.Row="2">
                                        <TextBlock Text="Animation" FontSize="16"/>
                                        <Grid Margin="0,5">
                                            <Border Background="#EEE" CornerRadius="5" Height="10"/>
                                            <Border Background="#6C5CE7" CornerRadius="5" Height="10" HorizontalAlignment="Left" Width="390"/>
                                        </Grid>
                                        <TextBlock Text="78% - 60+ Projects" FontSize="12" Foreground="#666"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Section -->
                    <StackPanel Grid.Column="1">
                        <!-- Attendance Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Today's Attendance" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <UniformGrid Columns="3">
                                    <StackPanel Margin="5">
                                        <TextBlock Text="Present" FontSize="14" Foreground="#666"/>
                                        <TextBlock Text="30" FontSize="24" FontWeight="Bold" Foreground="#6C5CE7"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="Late" FontSize="14" Foreground="#666"/>
                                        <TextBlock Text="3" FontSize="24" FontWeight="Bold" Foreground="#FFA502"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="Absent" FontSize="14" Foreground="#666"/>
                                        <TextBlock Text="2" FontSize="24" FontWeight="Bold" Foreground="#FF4757"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <!-- Birthday Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="🎂 Birthday Today" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <TextBlock Text="Terry Calzoni" FontSize="18" FontWeight="SemiBold"/>
                                <Button Content="Send Wishes" Style="{StaticResource ModernButton}" 
                                        Margin="0,10,0,0" Click="SendWishes_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Calendar Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="📅 Calendar" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                <Calendar Background="Transparent" BorderThickness="0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>